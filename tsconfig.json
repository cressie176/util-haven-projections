{
  "compilerOptions": {
    "lib": ["ES2019"],
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2019",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": ".",
    "allowJs": true,
    "paths": {
      "*": ["node_modules/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "dist/ts"
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["test/testdata/dist/**/*"]
}
